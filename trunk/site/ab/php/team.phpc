function photoID($name)
{# return member photo block
	$file = '../images/members/'.$name.'.jpg';
	$url = '/images/members/'.rawurlencode($name).'.jpg';
// 	dump($file); dump($url);

	if (file_exists($file)==TRUE)
		return "<dd><img src='{$url}' alt='{$name}_ID'></dd>";
	else
		return '';
